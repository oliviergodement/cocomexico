<div class="container">
  <h1>Add a new ingredient</h1>

  <div class="form">
  <%= form_for @ingredient do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :photo_url %>
      <%= f.text_field :photo_url, class: "form-control" %>
    </div>

  <%= f.submit %>
  <% end %>
</div>